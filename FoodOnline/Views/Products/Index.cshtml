@model IEnumerable<FoodOnline.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container-xl">
        <div class="row">
            <div class="col-md-12">
                <h2>Featured <b>Books</b></h2>

                <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                    <div class="carousel-inner">
                        <div class="item carousel-item active">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-3">
                                        <div class="thumb-wrapper">
                                            <div class="img-box">
                                                <a href="~/Products/Details/@item.IdProduct">
                                                    <figure>
                                                        <br><br/><img src="~/Imaget/z3899273256217_c5441def03febd3ab94ed9db6ce8de11.jpg" width="500px" height="300px"/>
                                                    </figure>
                                                </a>
                                            </div>
                                            <div class="thumb-content">
                                                <h4 style="color: white">@item.NameProduct</h4>
                                                <p class="item-price"> <b>$@item.Price</b></p>
                                            </div>
                                        </div>
                                    </div>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
