@model List<FoodOnline.Models.Message>
@{
    ViewBag.Title = "Chat với khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chat với khách hàng</h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách tin nhắn</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Tên khách hàng</th>
                            <th>Tin nhắn</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        { 
                            <tr>
                                <td style="color:brown">
                                    <b>@Html.DisplayFor(modelItem => item.User.NameUser)</b>
                                </td>
                                <td>
                                    <b>@Html.DisplayFor(modelItem => item.Content)</b>
                                </td>
                                @if (DateTime.Now.Subtract(item.CreateDate.Value).TotalDays <= 31)
                                {
                                    if (DateTime.Now.Subtract(item.CreateDate.Value).TotalHours <= 24)
                                    {
                                        if (DateTime.Now.Subtract(item.CreateDate.Value).TotalMinutes <= 60)
                                        {
                                            <td>
                                                @DateTime.Now.Subtract(item.CreateDate.Value).Minutes phút trước
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @DateTime.Now.Subtract(item.CreateDate.Value).Hours giờ @DateTime.Now.Subtract(item.CreateDate.Value).Minutes phút trước
                                            </td>
                                        }
                                    }
                                    else 
                                    {
                                        <td>
                                            @DateTime.Now.Subtract(item.CreateDate.Value).Days ngày trước
                                        </td>
                                    }
                                }
                                <td>
                                    <a class="btn btn-primary btnEdit" href="@Url.Action("Chating", "Chat", new {WithUserID=item.FromIdUser, MessageID=item.IdMessage})">Xem</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

